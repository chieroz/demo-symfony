{% extends 'base.html.twig' %}

{% block title %}:: {{ title }} ::{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container px-5 my-5">
            <div class="row gx-5">
                <div class="col-lg-3">
                    <div class="d-flex align-items-center mt-lg-5 mb-4">
                        <img class="img-fluid rounded-circle" src="{{ asset('build/images/author/' ~ blog.author.avatar|split('/')|last) }}" alt="..."/>
                        <div class="ms-3">
                            <div class="fw-bold">{{ blog.author.firstName }} {{ blog.author.lastName }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <!-- Post content-->
                    <article>
                        <!-- Post header-->
                        <header class="mb-4">
                            <!-- Post title-->
                            <h1 class="fw-bolder mb-1">{{ blog.title }}</h1>
                            <!-- Post meta content-->
                            <div class="text-muted fst-italic mb-2">{{ blog.publishedAt|date('Y-m-d') }}</div>
                        </header>
                        <!-- Preview image figure-->
                        <figure class="mb-4">
                            <img class="img-fluid rounded" src="{{ asset('build/images/blog/' ~ blog.image|split('/')|last) }}" alt="..."/>
                        </figure>
                        <!-- Post content-->
                        <section class="mb-5">
                            {{ blog.content|markdown_to_html }}
                        </section>
                    </article>
                    <!-- Comments section-->

                </div>
            </div>
        </div>
    </section>
{% endblock %}
